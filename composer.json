{
    "name": "imponeer/smarty-db-resource",
    "description": "Smarty plugin that adds DB resource type",
    "type": "library",
    "require": {
        "php": "^8.3",
        "ext-pdo": "*",
        "smarty/smarty": "^5"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Raimondas Rimkeviƒçius",
            "email": "github@mekdrop.name"
        }
    ],
    "autoload": {
        "psr-4": {
            "Imponeer\\Smarty\\Extensions\\DatabaseResource\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Imponeer\\Smarty\\Extensions\\DatabaseResource\\Tests\\": "tests/"
        }
    },
    "keywords": [
        "smarty",
        "database",
        "pdo",
        "smarty-plugins",
        "smarty-resource"
    ],
    "scripts": {
        "test": "phpunit",
        "phpcs": "phpcs",
        "phpcbf": "phpcbf"
    },
    "require-dev": {
        "ext-sqlite3": "*",
        "phpunit/phpunit": "^12",
        "squizlabs/php_codesniffer": "^3.13"
    },
    "config": {
        "sort-packages": true
    }
}
